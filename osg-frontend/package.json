{
  "name": "osg-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "OSG 职业培训平台前端 Monorepo（学生端、导师端、班主任端、助教端、管理后台）",
  "scripts": {
    "dev:student": "pnpm --filter @osg/student dev",
    "dev:mentor": "pnpm --filter @osg/mentor dev",
    "dev:lead-mentor": "pnpm --filter @osg/lead-mentor dev",
    "dev:assistant": "pnpm --filter @osg/assistant dev",
    "dev:admin": "pnpm --filter @osg/admin dev",
    "build:student": "pnpm --filter @osg/student build",
    "build:mentor": "pnpm --filter @osg/mentor build",
    "build:lead-mentor": "pnpm --filter @osg/lead-mentor build",
    "build:assistant": "pnpm --filter @osg/assistant build",
    "build:admin": "pnpm --filter @osg/admin build",
    "build:all": "pnpm -r build",
    "lint": "eslint packages --ext .vue,.ts,.tsx --fix",
    "format": "prettier --write \"packages/**/*.{vue,ts,tsx,js,json,css,scss}\"",
    "test:e2e": "playwright test",
    "test:e2e:ui-only": "playwright test --grep @ui-only",
    "test:e2e:api": "playwright test --grep @api",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.18.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
